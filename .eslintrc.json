{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
        "settings": {
          "import/resolver": {
            "typescript": {} // this loads <rootdir>/tsconfig.json to eslint
          }
        },
    "rules": {
        "linebreak-style": 0
    }
}
